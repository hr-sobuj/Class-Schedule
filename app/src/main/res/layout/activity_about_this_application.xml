<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AboutThisApplication">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"

        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Dark"
        android:elevation="4dp"

        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="0dp"
        android:padding="7dp"

        >
        <TextView

            android:layout_width="440dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="0dp"
            android:background="@drawable/submitborder_square1"

            android:layout_gravity="center"
            android:gravity="center"
            android:padding="5dp"
            android:text="About This Application"
            android:textColor="#fff"
            android:textSize="30sp"
            android:textStyle="bold" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">




            <TableLayout
                android:padding="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bordar_left_button_right">

                <TableRow android:layout_gravity="center"
                    android:gravity="center">

                    <ImageView android:layout_height="300dp"
                        android:layout_width="300dp"
                        android:src="@drawable/classscheduleapplogo"/>

                </TableRow>

               <!-- <TableRow
                    android:paddingBottom="10dp"
                    android:layout_gravity="center"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Class Schedule App for Computer Science and Engineering."
                        android:textSize="20sp"
                        android:textColor="#000"
                        android:layout_gravity="center"
                        android:gravity="center"

                        android:padding="2dp"/>




                </TableRow>-->



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Class Schedule App for Computer Science and Engineering."
                    android:textSize="20sp"
                    android:textColor="#000"
                    android:layout_gravity="center"
                    android:gravity="center"

                    android:padding="2dp"/>





            </TableLayout>

        </ScrollView>




    </LinearLayout>


</LinearLayout>